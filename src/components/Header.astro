---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

const isEnglish = Astro.url.pathname.startsWith('/en');
const navItems = isEnglish
	? [
			{ href: '/en/', label: 'Home' },
			{ href: '/en/blog', label: 'Projects' },
			{ href: '/en/about', label: 'About' },
	  ]
	: [
			{ href: '/', label: 'Anasayfa' },
			{ href: '/blog', label: 'Projeler' },
			{ href: '/about', label: 'HakkÄ±mda' },
	  ];
---

<header>
	<nav>
		<h2><a href={isEnglish ? '/en/' : '/'}>{SITE_TITLE}</a></h2>
		<div class="internal-links">
			{navItems.map(item => <HeaderLink href={item.href}>{item.label}</HeaderLink>)}
		</div>
		<div class="header-right">
			<div class="lang-switcher">
				{isEnglish ? (
					<span>
						<a class="lang-btn" href="/">TR</a>
						<span class="lang-sep">|</span>
						<span class="lang-btn active">EN</span>
					</span>
				) : (
					<span>
						<span class="lang-btn active">TR</span>
						<span class="lang-sep">|</span>
						<a class="lang-btn" href="/en/">EN</a>
					</span>
				)}
			</div>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.5em;
	}
	.header-right {
		display: flex;
		align-items: center;
	}
	.lang-switcher {
		display: flex;
		align-items: center;
		font-size: 1em;
		gap: 0.5em;
		margin-left: 1.5em;
	}
	.lang-btn {
		display: inline-block;
		padding: 0.25em 0.9em;
		border: none;
		background: transparent;
		color: var(--black);
		font-weight: 500;
		text-decoration: none;
		transition: opacity 0.2s;
		cursor: pointer;
	}
	.lang-btn:hover {
		opacity: 0.7;
	}
	.lang-btn.active {
		color: var(--black);
		font-weight: 700;
		cursor: default;
		pointer-events: none;
	}
	.lang-sep {
		margin: 0 0.2em;
		color: var(--black);
		font-weight: 400;
	}
	@media (max-width: 720px) {
		nav {
			flex-wrap: wrap;
			gap: 0.5em;
			padding: 0.25em 0;
		}
		
		.internal-links {
			order: 2;
			width: 100%;
			justify-content: center;
			margin-top: 0em;
		}
		
		.header-right {
			order: 1;
			margin-left: auto;
		}
		
		.lang-switcher {
			margin-left: 0;
		}

		nav a {
			padding: 0.25em 0.25em;
		}
	}
</style>
